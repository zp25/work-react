{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "color-named": ["never", {
      "ignore": ["inside-function"]
    }],
    "max-nesting-depth": 6,
    "order/properties-alphabetical-order": null,
    "scss/dollar-variable-pattern": ["^[_]?[a-z]+([a-z0-9-]+[a-z0-9]+)?$", {
      "ignore": "global"
    }],
    "selector-class-pattern": "^[a-z0-9\\-_]+$",
    "selector-max-id": 1
  }
}
